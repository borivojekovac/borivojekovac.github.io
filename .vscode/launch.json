{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mobile sensors",
            "request": "launch",
            "type": "chrome",
            "url": "https://localhost:3000/mobile-sensors-test/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Red Mirror",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceFolder}/red-mirror"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\web-server\\main.js"
        }
    ]
}